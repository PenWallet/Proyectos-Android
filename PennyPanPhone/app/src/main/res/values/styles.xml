<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/prinsesstartamedium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/prinsesstartamedium</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="LogInButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Cyan</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="RegisterButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/GreenishCyan</item>
        <item name="android:textColor">@color/White</item>
    </style>


</resources>
